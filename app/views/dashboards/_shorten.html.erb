<div class="container">
  <div id="shorten">
    <div class="col-md-offset-2 col-md-7">
      <h1 class="text-center">MAKE YOUR LINKS COUNT!</h1>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for link, html: { class: 'form-inline' } do |f| %>
            <div class="form-group col-xs-8">
              <%= f.url_field :long_url, "link", class: 'form-control input-lg short-link' %>
            </div>
            <div class="form-group col-xs-4">
              <%= f.submit "Shorten It!", class: 'btn-lg btn-primary pull-right' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
